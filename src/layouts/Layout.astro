---
import NavBarLayout from "./NavBarLayout.astro";


const { title = "Vixal" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{ title }</title>
  </head>
  <body class="bg-gray-800 h-screen w-full text-indigo-100">
    <NavBarLayout />
    <slot />
  </body>
</html>